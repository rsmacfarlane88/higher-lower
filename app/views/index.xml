<Alloy>
	<Window id="window">
		<View id="container">
			<ImageView id="logo"></ImageView>
			<Label id="title" />
			<View id="mainMenu">
				<ActivityIndicator id="spinner"></ActivityIndicator>
				<View id="menuItems">
					<Label class="menuItem" id="startGame" onClick="startGame"/>
					<Label class="menuItem" id="howToPlay" onClick="showHelp" />
					<Label class="menuItem" id="about" onClick="showAbout" />
				</View>
			</View>
		</View>
	</Window>
</Alloy>
