<Alloy>
  <Window id="gameWindow">
    <View id="infoBar">
      <Label class="score" id="scoreHeadingLabel" />
      <Label class="score" id="scoreLabel" />
    </View>
    <View id="gameContainer">
      <View id="endGame" onClick="exitGame">
        <Label id="endGameLabel" />
      </View>
      <View id="container">
        <View id="resultBar">
          <Label id="resultText" />
        </View>
        <View class="player" id="playerA" />
        <Label id="vsLabel" />
        <View class="player" id="playerB" />
      </View>
    </View>
  </Window>
</Alloy>
